{
  "scopeName": "source.lum",
  "patterns": [
    {
      "name": "comment.line.double-slash.lum",
      "match": "//.*$"
    },
    {
      "name": "keyword.control.lum",
      "match": "\\b(fin|return|if|else|for|while|nil|import|export|as|native|throws|throw|link)\\b|#\\w+"
    },
    {
      "begin": "\\b(struct|throws|throw)\\b",
      "beginCaptures": {
        "0": { "name": "storage.type.lum" }
      },
      "end": "([A-Za-z_][A-Za-z0-9_]*)",
      "endCaptures": {
        "1": { "name": "entity.name.type.struct.lum" }
      },
      "name": "meta.struct.lum"
    },
    {
      "name": "storage.type.lum",
      "match": "\\b(int|float|bool|string|struct|false|true)(\\[\\])?\\b"
    },
    {
      "name": "entity.name.type.struct.lum",
      "match": "\\b(?!int|float|bool|char|struct)[A-Za-z_][A-Za-z0-9_]*\\b(?=\\s+[A-Za-z_][A-Za-z0-9_]*)"
    },
    {
      "name": "constant.numeric.lum",
      "match": "\\b\\d+(\\.\\d+)?\\b"
    },
    {
      "name": "keyword.operator.lum",
      "match": "[=+\\-*/]|\\.\\."
    },
    {
      "name": "variable.language.lum",
      "match": "@"
    },
    {
      "name": "string.quoted.double.lum",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        { "match": "\\\\.", "name": "constant.character.escape.lum" }
      ]
    },
    {
      "name": "entity.name.function.lum",
      "match": "\\b[A-Za-z_][A-Za-z0-9_]*(?=\\s*\\()"
    }
  ]
}
